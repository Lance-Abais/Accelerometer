<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="edu.admu.thesisaccelerometer.accelerometer.MainActivity"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/txv_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/txv_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txv_x"
        android:layout_below="@+id/txv_x"
        android:layout_marginTop="12dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/txv_z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txv_y"
        android:layout_below="@+id/txv_y"
        android:layout_marginTop="12dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/txv_speed_xy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txv_z"
        android:layout_below="@+id/txv_z"
        android:layout_marginTop="183dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/txv_hispeed_xy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txv_z"
        android:layout_below="@+id/txv_speed_xy"
        android:layout_marginTop="50dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</RelativeLayout>